
<%= link_to  'log out', destroy_user_session_path , method: :delete%>
<div class="body">
    <div class="container">
		<div class="row">
  		<div class="col-md-3">
    		<h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image,  size: "100x100", format: 'jpeg', fallback: "no_image.jpg"%>
   
          <table class="table">
              <tbody>
                <tr></tr> 
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
               <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
             </tbody>
        </table>
          <%= link_to '', edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_15051" %>

    		<h2>New book</h2>
   			<div class="field row">
    			<%= form_for(@book, url: books_path) do |f| %>
    				<label for="book_title">Title</label>
    				<%= f.text_field :title, class:"form-control", rows:"3", placeholder:"Title" %>
    				<label for="book_title">Body</label>
    				<%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Opinion" %>
    				<%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    			<% end %>
    		</div>
    	</div>

  		<div class="col-md-9">
   		 	<div>
   		 	<h2>Users</h2>
			<table>
  				<thead>
    				<tr> 
    	  				<th>image</th>
  					    <th>name</th>
   						<th></th>
      					<th colspan="3"></th>
	    			</tr>
  				</thead>
 	 			<tbody>
 	 				<% @users.each do |user| %>
      					<tr>
       						<td>
       						<%= attachment_image_tag @user, :profile_image,  size: "60x60", format: 'jpeg', fallback: "no_image.jpg"%>
       							</td>
        					<td> <%= user.name %></td>
        					<td> <%= link_to 'Show', user_path(user) %></td>
      					</tr>
      				<% end %>
 			 	</tbody>
			</table>

   		 	</div>
  		</div>
	</div>
	</div>
</div>