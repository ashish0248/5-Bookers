
<%= link_to  'log out', destroy_user_session_path , method: :delete%>
<div class="body">
    <div class="container">
		<div class="row">
  		<div class="col-md-3">
    		<h2>User info</h2>
    			<img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
    			<table class="table">
      				<tbody>
      					<tr></tr> 
      					<tr>
    	  					<th><%= @user.name</th>
    	  					<th></th>
      					</tr>
   						<tr>
    	 					<th>introduction</th>
    	 					<th><%= @user.introduction</th>
     					</tr>
					</tbody>
				</table>
  				<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_15051" href="/users/15051/edit"></a>

    		<h2>New book</h2>
   			<div class="field row">
    			<%= form_for(@book, url: books_path) do |f| %>
    				<label for="book_title">Title</label>
    				<%= f.text_field :title, class:"form-control", rows:"3", placeholder:"Title" %>
    				<label for="book_title">Body</label>
    				<%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Opinion" %>
    				<%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    			<% end %>
    		</div>
    	</div>

  		<div class="col-md-9">
   		 	<div>
   		 	<h2>Books</h2>
			<table>
  				<thead>
    				<tr> 
    	  				<th></th>
  					    <th>Title</th>
   						<th>Opinion</th>
      					<th colspan="3"></th>
	    			</tr>
  				</thead>
 	 			<tbody>
 	 				<% @books.each do |book| %>
      					<tr>
       						<td>
       							<%= link_to book.user.name, book_path(book)  %>
       							</td>
        					<td><%= book.title %></td>
        					<td><%= book.body %></td>
      					</tr>
      				<% end %>
 			 	</tbody>
			</table>

   		 	</div>
  		</div>
	</div>
	</div>
</div>