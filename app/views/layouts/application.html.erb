<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meshiterro</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container">
          <nav>
            <span>Bookers</span>
          </nav>
          <nav>
          <ul>
              <% if user_signed_in? %>
                <li class="glyphicon glyphicon-home home"><%= link_to "Home",  user_path(current_user.id) %></li>
                <li class="glyphicon glyphicon-user users"><%= link_to 'Users', users_path %></li>
                <li class="glyphicon glyphicon-book books"><%= link_to 'Books', books_path %></li>
                <li class="glyphicon glyphicon-log-out logout"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li class="glyphicon glyphicon-home home"><%= link_to "Home", root_path %></li>
                <li class="glyphicon glyphicon-link about"><%= link_to 'about', home_about_path %></li>
                <li class="glyphicon glyphicon-edit sign_up"><%= link_to "sign up", new_user_registration_path %></li>
                <li class="glyphicon glyphicon-log-in sign_in"> <%= link_to "login", new_user_session_path %></li>
              <% end %>
          </ul>
        </nav>
    </div>
  
    <%= yield %>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
    
  </body>
</html>
